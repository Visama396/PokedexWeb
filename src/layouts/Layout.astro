---
interface Props {
	title: string;
	language: string;
}

import '../styles/global.css'

const { title, language } = Astro.props;
---

<!doctype html>
<html lang={language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PokÃ©dex made with Astro and TailwindCSS. Uses PokeAPI to fetch data and the github repository of sprites for the images." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="twitter:card" content="summary_large_large" />
		<meta name="twitter:site" content="@visama396" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
	</body>
</html>

<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&family=Noto+Sans+KR:wght@100..900&family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap');
	:root {
	    --normal: #a3a283;
	    --fire: #EE8130;
	    --water: #6390F0;
	    --electric: #F7D02C;
	    --grass: #53a123;
	    --ice: #96D9D6;
	    --fighting: #C22E28;
	    --poison: #853683;
	    --ground: #E2BF65;
	    --flying: #A98FF3;
	    --psychic: #d34a74;
	    --bug: #929d3e;
	    --rock: #94824D;
	    --ghost: #433457;
	    --dragon: #6F35FC;
	    --dark: #4F4D4D;
	    --steel: #868697;
	    --fairy: #D685AD;
	    --light-normal: #7d7a7a;
	    --light-fire: #ed5509;
	    --light-water: #0972a7;
	    --light-electric: #ffe900;
	    --light-grass: #408723;
	    --light-ice: #65aaf0;
	    --light-fighting: #8f3121;
	    --light-poison: #810a6a;
	    --light-ground: #ab8f4d;
	    --light-flying: #317ff5;
	    --light-psychic: #d61361;
	    --light-bug: #707e0b;
	    --light-rock: #5f5221;
	    --light-ghost: #5454B3;
	    --light-dragon: #4E38E9;
	    --light-dark: #3b3938;
	    --light-steel: #6b6b73;
	    --light-fairy: #f108f1;
	}

	html {
		font-family: 'Noto Sans', 'Noto Sans JP', 'Noto Sans KR', sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background: #111;
	}

	html:lang(ja) {
		font-family: 'Noto Sans JP', sans-serif;
	}

	html:lang(ko) {
		font-family: 'Noto Sans KR', sans-serif;
	}

	.scrollbar-minimal::-webkit-scrollbar {
		width: 6px;
	}

	.scrollbar-minimal::-webkit-scrollbar-track {
		background: transparent;
	}

	.scrollbar-mininmal::-webkit-scrollbar-thumb {
		background: rgba(255,255,255,0.25);
		border-radius: 9999px;
	}

	.scrollbar-minimal::-webkit-scrollbar-thumb:hover {
		background: rgba(255,255,255,0.35);
	}

	.scrollbar-minimal {
		scrollbar-width: thin;
		scrollbar-color: rgba(255,255,255,0.35) transparent;
	}

	.pill {
		display: inline-block;
		padding: .2rem .5rem;
		background-color: var(--normal);
		border-radius: 8px;
		color: white;
	}

	.pill.fire {
		background-color: var(--fire);
	}

	.pill.water {
		background-color: var(--water);
	}

	.pill.electric {
		background-color: var(--electric);
	}

	.pill.grass {
		background-color: var(--grass);
	}

	.pill.ice {
		background-color: var(--ice);
	}

	.pill.fighting {
		background-color: var(--fighting);
	}

	.pill.poison {
		background-color: var(--poison);
	}

	.pill.ground {
		background-color: var(--ground);
	}

	.pill.flying {
		background-color: var(--flying);
	}

	.pill.psychic {
		background-color: var(--psychic);
	}

	.pill.bug {
		background-color: var(--bug);
	}

	.pill.rock {
		background-color: var(--rock);
	}

	.pill.ghost {
		background-color: var(--ghost);
	}

	.pill.dragon {
		background-color: var(--dragon);
	}

	.pill.dark {
		background-color: var(--dark);
	}

	.pill.steel {
		background-color: var(--steel);
	}

	.pill.fairy {
		background-color: var(--fairy);
	}

	.pill.off {
		background-color: grey;
	}

	.additional-info {
		color: grey;
		font-size: .9rem;
	}

	.male {
		color: #3273DC;
	}

	.female {
		color: #FF6BCE;
	}

	.pokedata-grid {
		grid-template-columns: 1fr;
		grid-template-areas:
			"Sprite"
			"Data"
			"Training"
			"Breeding"
	}

	@media (min-width: 768px)
	{
		.pokedata-grid {
			grid-template-columns: 1fr 1fr;
			grid-template-rows: max-content_1fr max-content_1fr;
			grid-template-areas:
				"Sprite Data"
				"Training Breeding"
		}
	}

	@media (min-width: 1280px)
	{
		.pokedata-grid {
			grid-template-columns: 1fr 1fr 1fr;
			grid-template-rows: 1fr 1fr;
			grid-template-areas:
				"Sprite Data Training"
				"Sprite Data Breeding"
		}
	}

	.sprite {
		grid-area: Sprite;
	}

	.data {
		grid-area: Data;
	}

	.training {
		grid-area: Training;
	}

	.breeding {
		grid-area: Breeding;
	}
</style>
